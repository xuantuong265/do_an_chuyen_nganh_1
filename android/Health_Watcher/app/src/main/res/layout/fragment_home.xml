                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/library_lookup"
                            android:textColor="@color/textPrimary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_layout"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/prevent" />

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/prevent"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/textPrimary"
                            android:textSize="12sp" />

                    </LinearLayout>

                </GridLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/health_article_and_news"
                    android:fontFamily="@font/poppins_regular"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recommend"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                   <LinearLayout
                       android:gravity="right"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="@string/view_all"
                           android:fontFamily="@font/poppins_regular"
                           android:textColor="@color/blue" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:src="@drawable/next" />

                   </LinearLayout>


                </LinearLayout>

                <GridLayout
                    android:padding="@dimen/_15sdp"
                    android:columnCount="1"
                    android:rowCount="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_261sdp"
                        android:layout_height="@dimen/_82sdp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/newcovid" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:padding="10dp"
                            android:text="@string/corona_virus"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_261sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"
                        app:cardElevation="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/vaccine" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:background="@color/grey"
                        android:layout_width="@dimen/_261sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        app:cardElevation="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/preventcovid" />

                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </LinearLayout>

        </LinearLayout>

