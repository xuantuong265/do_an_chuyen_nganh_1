<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MyCountryFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:paddingTop="@dimen/_15sdp"
                    android:textColor="@color/textPrimary"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:horizontalSpacing="10dp"
                    android:padding="@dimen/_10sdp"
                    android:rowCount="3"
                    android:rowOrderPreserved="false"
                    android:useDefaultMargins="true"
                    android:verticalSpacing="10dp">

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_layout"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/textPrimary"
                            android:text="@string/cases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/cases"
                            android:textColor="@color/textPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_layout"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/textPrimary"
                            android:text="@string/recovered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/recovered"
                            android:textColor="@color/textPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_layout"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/textPrimary"
                            android:text="@string/active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/active"
                            android:textColor="@color/textPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_layout"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/textPrimary"
                            android:text="@string/critical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/critical"
                            android:textColor="@color/textPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_layout"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/textPrimary"
                            android:text="@string/deaths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/deaths"
                            android:textColor="@color/textPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </GridLayout>

                <TextView
                    android:paddingTop="@dimen/_15sdp"
                    android:textColor="@color/textPrimary"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:horizontalSpacing="10dp"
                    android:padding="@dimen/_10sdp"
                    android:rowCount="2"
                    android:rowOrderPreserved="false"
                    android:useDefaultMargins="true"
                    android:verticalSpacing="10dp">

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_layout"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/textPrimary"
                            android:text="@string/today_cases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/today_cases"
                            android:textColor="@color/textPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_layout"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/textPrimary"
                            android:text="@string/today_recovered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/today_recovered"
                            android:textColor="@color/textPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_layout"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/textPrimary"
                            android:text="@string/today_deaths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/today_deaths"
                            android:textColor="@color/textPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </GridLayout>
            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</FrameLayout>